<%- include('../../views/layouts/header'); %>

<body>
    <%- include('../../views/layouts/navbar'); %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h5>Edição de categorias</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/categories/update">
                    <input type="hidden" name="id" value="<%= categories.id %>">
                    <input class="form-control" type="text" name="title" placeholder="Digite o nome da sua nova categorias" value="<%= categories.title %>">
                    <br>
                    <button class="btn btn-sm btn-success" type="submit">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</body>
