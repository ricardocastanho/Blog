<%- include('../../views/layouts/header'); %>

<body>
    <%- include('../../views/layouts/navbar'); %>
    <div class="container">
        <h3>Artigos</h3>
        <br>
        <a href="/admin/articles/create" class="btn btn-sm btn-success">Novo Artigo</a>
        <br><br>
        <table class="table table-bordered table-ligth">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Slug</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(articles=> { %>
                    <tr>
                        <td scope="row"> <%= articles.id %> </td>
                        <td scope="row"> <%= articles.title %> </td>
                        <td scope="row"> <%= articles.slug %> </td>
                        <td scope="row"> <%= articles.category.title %> </td>
                        <td scope="row">
                            <a href="/admin/articles/edit/<%= articles.id %>" class="btn btn-sm btn-warning">Editar</a>
                            <form method="POST" action="/admin/articles/delete" style="display: inline;" onsubmit="confirmar(event, this)">
                                <input type="hidden" name="id" value="<%= articles.id %>">
                                <button class="btn btn-sm btn-danger" type="submit">Deletar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
        function confirmar(event, form){
            event.preventDefault()
            var decision = confirm("Você tem certeza que deseja apagar essa categoria?")
            if(decision){
                form.submit()
            }
        }
    </script>
</body>
<%- include('../../views/layouts/footer'); %>