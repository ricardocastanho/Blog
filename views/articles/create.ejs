<%- include('../../views/layouts/header'); %>

<body>
    <%- include('../../views/layouts/navbar'); %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h5>Novo Artigo</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/articles/save">
                    <input class="form-control" type="text" name="title" placeholder="Digite o nome do seu artigo">
                    <br>
                    <select name="categoryId" class="form-control">
                        <% categories.forEach(categories => { %> 
                        <option value="<%= categories.id %>" name="categoryId"> <%= categories.title %> </option>
                        <% }) %>
                    </select>
                    <br>
                    <textarea class="form-control" name="body" placeholder="Digite seu artigo aqui!"></textarea>
                    <br>
                    <button class="btn btn-sm btn-success" type="submit">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../views/layouts/footer'); %>
