<%- include('../../views/layouts/header'); %>

<body>
    <%- include('../../views/layouts/navbar'); %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h5>Edição de artigos</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/articles/update">
                    <input type="hidden" name="id" value="<%= articles.id %>">
                    <input class="form-control" type="text" name="title" placeholder="Digite o nome da sua novo artigo" value="<%= articles.title %>">
                    <br>

                    <select name="categoryId" class="form-control">
                        <% categories.forEach(categories => { %> 
                            <% if(categories.id == articles.categoryId) { %>
                                <option value="<%= categories.id %>" name="categoryId" selected> <%= categories.title %> </option>
                            <% }else{ %>
                                <option value="<%= categories.id %>" name="categoryId"> <%= categories.title %> </option>
                            <% } %>
                        <% }) %>
                    </select>
                    
                    <br>
                    <textarea class="form-control" name="body" placeholder="Digite seu artigo aqui!"><%= articles.body %> </textarea>
                    <br>
                    <button class="btn btn-sm btn-success" type="submit">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../views/layouts/footer'); %>
